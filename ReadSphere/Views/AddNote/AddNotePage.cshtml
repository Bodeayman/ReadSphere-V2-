@model ViewModels.AddNoteViewModel
@{
    ViewData["Title"] = "Add Note";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="mb-4">Add Note</h2>

    <form asp-action="AddNote" asp-controller="AddNote" method="post">
        <div class="form-group mb-3">
            <label asp-for="NoteText" class="form-label"></label>
            <textarea asp-for="NoteText" class="form-control" rows="4"></textarea>
            <span asp-validation-for="NoteText" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PageNumber" class="form-label"></label>
            <input asp-for="PageNumber" class="form-control" type="number" />
            <span asp-validation-for="PageNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="BookID" class="form-label">Select Book</label>
            <select asp-for="BookID" class="form-control">
                <option value="">-- Select Book --</option>
                @foreach (var book in Model.BooksList)
                {
                    <option value="@book.Id">@book.Title</option>
                }
            </select>
            <span asp-validation-for="BookID" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Add Note</button>
    </form>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">@TempData["SuccessMessage"]</div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
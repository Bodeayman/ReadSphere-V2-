@model ViewModels.AddReviewViewModel
@{
    ViewData["Title"] = "Add Review";
}

@if (User.Identity.IsAuthenticated)
{
    <div class="container mt-5">
        <div class="card shadow-sm p-4">
            <h2 class="mb-4">Add Review</h2>

            <form method="post" asp-controller="AddReview" asp-action="AddRating" asp-antiforgery="true">
                @* Keeps track of which book this review belongs to *@
                <input type="hidden" asp-for="BookId" />

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label"></label>
                    <input asp-for="Rating" class="form-control" type="number" min="0" max="5" step="0.1" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ReviewText" class="form-label"></label>
                    <textarea asp-for="ReviewText" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="ReviewText" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Submit Review</button>
                <a asp-controller="AllBooks" asp-action="Index" asp-route-id="@Model.BookId"
                    class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
}
else
{
    <div class="container mt-5 text-center">
        <h3 class="text-danger mb-3">Access Denied</h3>
        <p>You must sign in to add a review.</p>
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Sign In</a>
    </div>
}
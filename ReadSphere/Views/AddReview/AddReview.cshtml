@using Microsoft.AspNetCore.Http
@using System.ComponentModel.DataAnnotations
@model ViewModels.AddReviewModel
@{
    ViewData["Title"] = "Add Review";
}

@if (Context.Request.Cookies["User"] != null)
{
    <form method="post" asp-controller="AddReview" asp-action="AddRating">
        <div class="container mt-5">
            <h2>Add Review</h2>

            <!-- Hidden field to keep track of which book this review belongs to -->
            <input type="hidden" asp-for="BookId" />

            <div class="mb-3">
                <label asp-for="Rating" class="form-label">Rating</label>
                <input asp-for="Rating" class="form-control" type="number" min="0" step="0.1" max="5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Review_Text" class="form-label">Description</label>
                <textarea asp-for="Review_Text" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Review_Text" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Add Review</button>
        </div>
    </form>
}
else
{
    <h2>Access Denied, Please Sign in</h2>
}
@model ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Home page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/home.css" />

<div>
    <div class="reading-status">
        <h3>What are you reading?</h3>

        <div class="search-box">
            <form method="get" asp-action="Index" asp-controller="Home" class="d-flex w-100">
                <input type="text" asp-for="SearchQuery" placeholder="Search books" value="@Model.SearchQuery"
                    class="form-control" />
                <button type="submit" class="btn btn-primary ms-2">üîç</button>
            </form>
        </div>

        @if (Context.Request.Cookies["User"] != null)
        {
            <div class="books-section">
                <h3>My Books</h3>

                @if (Model.MyBooks?.Count > 0)
                {
                    <div class="books-grid">
                        @foreach (var book in Model.MyBooks)
                        {
                            <div class="book-card">
                                <img src="~/@book.CoverImage" alt="Book cover" class="book-cover"
                                    onerror="this.onerror=null; this.src='/uploads/default.jpeg';" />

                                <div class="book-info">
                                    <h4 class="book-title">@book.Title</h4>
                                    <p class="book-author">@book.Author</p>

                                    <a asp-controller="AddReview" asp-action="AddReview" asp-route-id="@book.Id"
                                        class="book-rating">
                                        ‚òÖ‚òÖ‚òÖ‚òÖ‚òÜ @Math.Round(book.AvgRate, 2)
                                    </a>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p>No books found or matching your search.</p>
                }

                @if (Context.Request.Cookies["is_admin"] == "admin")
                {
                    <a asp-controller="AddBook" asp-action="AddBookPage" class="btn btn-success mt-3">
                        Add New Book
                    </a>
                }
            </div>
        }
        else
        {
            <h2>Please Sign In</h2>
        }

        <!-- QUOTES & NOTES SECTION -->
        <div class="carousel-section">
            <div class="carousel-container bg-white p-4">

                <!-- Quotes Carousel -->
                <div id="quotesCarousel" class="carousel slide mb-4" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (Model.MyQuotes != null && Model.MyQuotes.Count > 0)
                        {
                            @for (int i = 0; i < Model.MyQuotes.Count; i++)
                            {
                                var quote = Model.MyQuotes[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="quote-card">
                                        <p class="quote-text">@quote.QuoteText</p>
                                        <p class="quote-author">@quote.User.UserName</p>
                                        <p class="quote-book">@quote.Book</p>
                                        <p class="quote-book">@quote.CreatedAt.ToString("yyyy-MM-dd")</p>
                                        <p class="quote-book">@quote.PageNumber</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-center">No quotes found.</p>
                        }
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#quotesCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#quotesCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>

                <!-- Notes Carousel -->
                <div id="notesCarousel" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-inner">
                        @if (Model.MyNotes != null && Model.MyNotes.Count > 0)
                        {
                            @for (int i = 0; i < Model.MyNotes.Count; i++)
                            {
                                var note = Model.MyNotes[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <div class="quote-card">
                                        <p class="quote-text">@note.NoteText</p>
                                        <p class="quote-author">@note.Author</p>
                                        <p class="quote-book">@note.Book</p>
                                        <p class="quote-book">@note.DateTime.ToString("yyyy-MM-dd")</p>
                                        <p class="quote-book">@note.PageNumber</p>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-center">No notes found.</p>
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#notesCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#notesCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </button>
                </div>

                @if (Context.Request.Cookies["User"] != null)
                {
                    <a class="btn btn-primary mt-3" asp-controller="AddNote" asp-action="AddNotePage">Add New Note</a>
                    <a class="btn btn-primary mt-3" asp-controller="AddQuote" asp-action="AddQuotePage">Add New Quote</a>
                }
            </div>
        </div>
    </div>

    @if (Context.Request.Cookies["User"] != null)
    {
        <div class="d-flex flex-row align-items-center mt-4">
            <form method="post" asp-action="Logout" asp-controller="Home">
                <button type="submit" class="btn btn-danger ms-2">Logout</button>
            </form>

            <div class="ms-3">
                <a asp-controller="ChangePassword" asp-action="ChangePassword" class="btn btn-primary">
                    Change Password
                </a>
            </div>
        </div>
    }
</div>

<!-- SIDEBAR -->
<aside class="sidebar mt-5">
    <div class="books-section">
        <div class="reading-challenge">
            <h3>My Reading Goals</h3>

            <div class="challenge-stats">
                @foreach (var notification in Model.DueGoing)
                {
                    <div class="card mb-2">
                        <div class="card-header">
                            <h5>@notification.Message</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>Date:</strong> @notification..ToString("yyyy-MM-dd")</p>
                            <p><strong>Pages:</strong> @notification.Pages</p>
                            <p>@notification.Message</p>
                        </div>
                    </div>
                }
            </div>

            @if (Context.Request.Cookies["User"] != null)
            {
                <div class="mt-3">
                    <a asp-controller="AddGoals" asp-action="AddGoalPage" class="btn btn-success">Add More Goals</a>
                </div>
            }
        </div>
    </div>

    @if (Context.Request.Cookies["User"] != null)
    {
        <div class="books-section mt-4">
            <h3>My Clubs</h3>
            <div class="books-grid">
                @foreach (var club in Model.MyClubs)
                {
                    <div class="book-card">
                        <div class="book-info">
                            <h4 class="book-title">@club.Name</h4>
                        </div>
                    </div>
                }
            </div>

            @if (Context.Request.Cookies["is_admin"] == "admin")
            {
                <a class="btn btn-primary mt-3" asp-controller="AddClub" asp-action="AddClubPage">Add New Club</a>
            }
        </div>
    }

    @if (Context.Request.Cookies["User"] != null)
    {
        <div class="books-section mt-4">
            <h3>Categories</h3>
            @if (Context.Request.Cookies["is_admin"] == "admin")
            {
                <a class="btn btn-primary" asp-controller="AddCategory" asp-action="CreateCategory">Add New Category</a>
            }
        </div>
    }

    @if (Context.Request.Cookies["is_admin"] == "admin")
    {
        <div class="container py-5 bg-white mt-4">
            <h2 class="text-center mb-4">Statistics</h2>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Total Books</h5>
                            <p>@Model.TotalBooks</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Total Clubs</h5>
                            <p>@Model.TotalClubs</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Total Quotes Saved</h5>
                            <p>@Model.TotalQuotes</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Total Notes Created</h5>
                            <p>@Model.TotalNotes</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5>Total Users in System</h5>
                            <p>@Model.TotalUsers</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</aside>

<script src="~/js/homeCounter.js"></script>
<script src="~/js/home.js"></script>
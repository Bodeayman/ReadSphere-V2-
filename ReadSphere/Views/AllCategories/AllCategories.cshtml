@model List<ViewModels.CategoryViewModel>
@{
    ViewData["Title"] = "Categories";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold">Categories</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <p class="text-center text-muted mb-5">
            Explore the available book categories in the university library.
        </p>

        <div class="row g-4 justify-content-center">
            @foreach (var cat in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-sm border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@cat.Name</h5>
                            <p class="card-text text-secondary">@cat.Desc</p>

                            <hr />

                            <h6 class="fw-semibold">Books</h6>
                            @if (cat.Books.Any())
                            {
                                <ul class="list-unstyled mb-3">
                                    @foreach (var book in cat.Books)
                                    {
                                        <li class="text-muted">â€¢ @book</li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <p class="text-muted"><i>No books in this category yet.</i></p>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <form asp-action="GetBookCatPage" asp-controller="AddBookCat" asp-route-id="@cat.Id" method="get"
                                    class="mt-3">
                                    <input type="hidden" name="CatId" value="@cat.Id" />
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        Add a Book to This Category
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            Please sign in to view the available categories.
        </div>
    }
</div>
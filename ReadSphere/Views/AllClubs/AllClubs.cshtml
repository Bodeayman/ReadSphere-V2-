@model ViewModels.ClubViewModel
@{
    ViewData["Title"] = "Clubs";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold">Clubs</h1>

    @if (User.Identity.IsAuthenticated)
    {
        @if (Model.Clubs.Any())
        {
            <div class="row g-4 justify-content-center">
                @foreach (var club in Model.Clubs)
                {
                    <div class="col-md-4 col-sm-6">
                        <div class="card shadow-sm border-0 h-100">
                            <div class="card-body">
                                <h5 class="card-title text-primary">@club.Name</h5>
                                <p class="card-text text-secondary">@club.Description</p>

                                <hr />

                                <h6 class="fw-semibold">Members</h6>
                                @if (club.Users.Any())
                                {
                                    <ul class="list-unstyled mb-3">
                                        @foreach (var user in club.Users)
                                        {
                                            <li class="text-muted">â€¢ @user</li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted"><i>No members yet.</i></p>
                                }

                                <form asp-action="Join" asp-controller="AllClubs" asp-route-id="@club.Id" method="post"
                                    class="mt-3">
                                    <input type="hidden" name="clubId" value="@club.Id" />
                                    <button type="submit" class="btn btn-outline-primary w-100">
                                        Join Club
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center mt-5">
                No clubs available.
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center mt-5">
            You need to sign in to view clubs.
        </div>
    }
</div>
@model ViewModels.ClubViewModel

<h1 class="my-5">Clubs</h1>

<div class="book-list row">
    @if (Context.Request.Cookies["User"] != null)
    {
        if (Model.Clubs.Any())
        {
            foreach (var club in Model.Clubs)
            {
                <div class="col-md-4">
                    <article class="book-item">
                        <div class="card mb-4 shadow-sm">
                            <div class="card-body">
                                <h3 class="card-title">@club.Name</h3>
                                <p class="text-muted">@club.Desc</p>

                                <h6>Members:</h6>
                                <ul>
                                    @foreach (var user in club.users)
                                    {
                                        <li>@user</li>
                                    }
                                </ul>

                                <form asp-action="Join" asp-controller="AllClubs" method="post">
                                    <input type="hidden" name="clubId" value="@club.Id" />
                                    <input type="submit" value="Join Club" class="btn btn-primary" />
                                </form>
                            </div>
                        </div>
                    </article>
                </div>
            }
        }
        else
        {
            <p>No clubs available.</p>
        }
    }
    else
    {
        <p>You need to sign in to view clubs.</p>
    }
</div>
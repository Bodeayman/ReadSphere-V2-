@model ViewModels.AddClubViewModel
@{
    ViewData["Title"] = "Add Club";
}

<div class="container mt-5" style="max-width: 500px;">
    <h2 class="mb-4">Add a New Club</h2>

    <form asp-action="AddClub" asp-controller="AddClub" method="post">
        <div class="form-group mb-3">
            <label asp-for="ClubName" class="form-label"></label>
            <input asp-for="ClubName" class="form-control" />
            <span asp-validation-for="ClubName" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ClubDescription" class="form-label"></label>
            <textarea asp-for="ClubDescription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="ClubDescription" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Add Club</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
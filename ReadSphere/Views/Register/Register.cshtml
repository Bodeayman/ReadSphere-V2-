@model ViewModels.RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Sign Up - ReadSphere</title>
        <link rel="stylesheet" href="~/css/register.css" />
    </head>

    <body>
        <div class="container">
            <div class="register-container">

                <div class="logo-section">
                    <h1>ReadSphere</h1>
                    <p>Meet your next favorite book</p>
                </div>

                <form asp-action="Register" asp-controller="Register" method="post" class="register-form">
                    <h2>Sign Up</h2>

                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="form-group">
                        <input asp-for="Name" class="form-control" placeholder="Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Email" class="form-control" placeholder="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="Password" class="form-control" type="password" placeholder="Password" />
                        <small>At least 8 characters</small>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input asp-for="ConfirmPassword" class="form-control" type="password"
                            placeholder="Confirm password" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <button type="submit" class="signup-btn">Sign up</button>

                    <div class="terms mt-3">
                        By clicking "Sign up" you agree to our terms of service and privacy policy.
                    </div>

                    <div class="login-link mt-2">
                        Already a member? <a asp-controller="Login" asp-action="Index">Log in</a>
                    </div>
                </form>
            </div>
        </div>

        <script src="~/lib/jquery/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/jquery.validate.min.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    </body>

</html>
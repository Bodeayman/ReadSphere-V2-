@page
@model ReadSphere.Pages.ClubsModel
@{
    ViewData["Title"] = "Clubs Page";
}
<div class="my-5">
    <h1>Clubs</h1>
    @if (Request.Cookies["User"] != null)
    {
        <p>This section will show the clubs in the university</p>


        <div class="row">
            @if (Model.Clubs != null && Model.Clubs.Count > 0)
            {
                @foreach (var club in Model.Clubs)
                {
                    <div class="col-md-4">
                        <div class="card mb-4" style="max-width: 300px;">
                            <div class="card-body">
                                <h5 class="card-title">@club.Name</h5>
                                <p class="card-text">@club.Desc</p>
                            </div>
                            <div class="card-body">
                                <h5>Users</h5>
                                @foreach (var user in club.users)
                                {
                                    <p>@user</p>
                                }
                            </div>

                            <form method="post">
                                <input type="hidden" name="ClubId" value="@club.Id" />
                                <input type="submit" value="Join the club" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No clubs found or an error happened please refresh the page or add clubs</p>
            }
        </div>
    }
    else
    {
        <p>You need to login to see the clubs</p>
    }
</div>

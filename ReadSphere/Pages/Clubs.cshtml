@page
@model ReadSphere.Pages.ClubsModel
@{
}
<div>
    <h1>Clubs</h1>
    <p> this seciton Will take about the Clubs in the university</p>

    @foreach (var club in Model.Clubs)
    {
        <div class="card mb-4" style="max-width: 300px;">
            <div class="card-body">
                <h5 class="card-title">@club.Name</h5>
                <p class="card-text">@club.Desc</p>
            </div>
            <form method="post">
                <input type="hidden" name="ClubId" value="@club.Id" />
                <input type="submit" value="Join the club" class="btn btn-primary">
            </form>
        </div>
    }

</div>
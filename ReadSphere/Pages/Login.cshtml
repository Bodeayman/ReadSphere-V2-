@page
@model Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Login - ReadSphere</title>
        <link rel="stylesheet" href="css/register.css" />
    </head>

    <body>
        <div class="container">
            <div class="register-container">
                <div class="logo-section">
                    <h1>ReadSphere</h1>
                    <p>Meet your next favorite book</p>
                </div>

                <form id="loginForm" class="register-form" method="post">
                    <h2>Login</h2>

                    <div class="form-group">
                        <input type="text" id="email" asp-for="email" required placeholder="email">
                        <span asp-validation-for="email" class="text-danger"></span>

                    </div>

                    <div class="form-group">
                        <input type="password" id="pass" asp-for="password" required placeholder="password">
                        <span asp-validation-for="password" class="text-danger"></span>

                    </div>


                    <button type="submit" class="signup-btn">Login </button>



                    <div class="login-link">
                        Don't have an account? <a href="/Register">Sign up</a>
                    </div>
                </form>
            </div>
        </div>
        <script type="module" src="js/register.js"></script>
    </body>

</html>
